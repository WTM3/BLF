{
  "name": "blf-njson-engine",
  "displayName": "BLF NJSON V-8 Engine",
  "description": "Boolean Language Framework with the narrow bridge between chaos and control - AIc + 0.1 = BMqs processing engine",
  "version": "1.0.0",
  "publisher": "blf-team",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Data Science"
  ],
  "keywords": [
    "blf",
    "boolean",
    "njson",
    "v8-engine",
    "cognitive",
    "ai-alignment"
  ],
  "activationEvents": [
    "onCommand:blf.processText",
    "onCommand:blf.engineStatus",
    "onCommand:blf.validatePrecision"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blf.processText",
        "title": "ðŸŽ¯ Process Text through BLF NJSON V-8 Engine",
        "category": "BLF"
      },
      {
        "command": "blf.engineStatus",
        "title": "ðŸš— BLF Engine Status Report",
        "category": "BLF"
      },
      {
        "command": "blf.validatePrecision",
        "title": "ðŸ§® Validate BLF Mathematical Precision",
        "category": "BLF"
      },
      {
        "command": "blf.processSelection",
        "title": "ðŸŒ‰ Process Selected Text with BLF",
        "category": "BLF"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "blf.processSelection",
          "group": "blf"
        }
      ],
      "commandPalette": [
        {
          "command": "blf.processText"
        },
        {
          "command": "blf.engineStatus"
        },
        {
          "command": "blf.validatePrecision"
        },
        {
          "command": "blf.processSelection",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "BLF NJSON Engine",
      "properties": {
        "blf.heatShieldEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable heat shield protection against invalid inputs"
        },
        "blf.maxInputSize": {
          "type": "number",
          "default": 15000,
          "description": "Maximum input size before heat shield activation (bytes)"
        },
        "blf.bufferValue": {
          "type": "number",
          "default": 0.1,
          "description": "The narrow bridge constant (AIc + buffer = BMqs)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blf-team/blf-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/blf-team/blf-vscode-extension/issues"
  },
  "homepage": "https://github.com/blf-team/blf-vscode-extension#readme",
  "license": "MIT"
}
